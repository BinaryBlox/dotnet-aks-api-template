{
    "$schema": "http://json.schemastore.org/template",
    "author": "Rob Bell",
    "classifications": [
        "WebAPI",
        "ASP.NET",
        "AKS"
    ],
    "identity": "robbell.aksapi.template",
    "name": "ASP.NET Core WebAPI for AKS",
    "description": "A 'dotnet new' template for creating a fully-featured, 12 Factor, ASP.NET Core Web API for AKS",
    "shortName": "aksapi",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "defaultName": "AksApi",
    "sourceName": "AksApi",
    "preferNameDirectory": true,
    "symbols": {
        "controller-name": {
            "type": "parameter",
            "datatype": "text",
            "replaces": "SampleController",
            "fileRename": "SampleController",
            "description": "The name of the default controller. Default is SampleController."
        },
        "skip-restore": {
            "type": "parameter",
            "datatype": "bool",
            "description": "If specified, skips the automatic restore of the project on create.",
            "defaultValue": "false"
        },
        "disable-open-api": {
            "type": "parameter",
            "datatype": "bool",
            "description": "Disable OpenAPI (Swagger) support.",
            "defaultValue": "false"
        },
        "enableOpenApi": {
            "type": "computed",
            "value": "(!disable-open-api)"
        },
        "disable-health-check": {
            "type": "parameter",
            "datatype": "bool",
            "description": "Disable health check support.",
            "defaultValue": "false"
        },
        "enableHealthCheck": {
            "type": "computed",
            "value": "(!disable-health-check)",
            "replaces": "enableHealthCheckValue"
        },
        "disable-logging": {
            "type": "parameter",
            "datatype": "bool",
            "description": "Disable Logging and AppInsights support.",
            "defaultValue": "false"
        },
        "enableLogging": {
            "type": "computed",
            "value": "(!disable-logging)",
            "replaces": "enableLoggingValue"
        },
        "instrumentation-key": {
            "type": "parameter",
            "datatype": "text",
            "replaces": "11111111-1111-1111-11111111111111111",
            "description": "The AppInsights application key if logging is enabled."
        }
    },
    "postActions": [
        {
            "condition": "(!skip-restore)",
            "description": "Restore packages required by this project.",
            "manualInstructions": [
                {
                    "text": "Run 'dotnet restore'"
                }
            ],
            "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
            "continueOnError": true
        }
    ],
    "sources": [
        {
            "modifiers": [
                {
                    "condition": "(disable-health-check)",
                    "exclude": [
                        "HealthChecks/**"
                    ]
                },
                {
                    "condition": "(disable-logging)",
                    "exclude": [
                        "appsettings.json"
                    ]
                }
            ]
        }
    ]
}